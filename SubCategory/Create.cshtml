@model FastBite.Models.Viewmodels.CategoryAndSubCategoryModel
@using FastBite.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Create SubCategory </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-6">

            <div class="mb-3">
                <!--<select>
                @*@foreach (var item in Model.categoryList)
                {
                      <option value="@item.Id">@item.Name</option>
                }*@
                </select>-->
                <label asp-for="categoryList"></label>
                @Html.DropDownListFor(m => m.SelectedCategoryId, IEnumerableExtension.ToSelectListItem(Model.categoryList, 1), new { @id="ddCategoryList" })
            </div>
            <div class="mb-3">
                <label asp-for="subCategory.Name"></label>
                <input asp-for="subCategory.Name" class="form-control" />
            </div>
        </div>
        <div class="col-6">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ExistingSub</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.subCategoryList != null)
                    {
                        @foreach (var item in Model.subCategoryList)
                        {
                   
                            <tr>
                                <td>@item.Name</td>
                            </tr>
                            //@Html.LabelFor(m => item)
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <input class="btn btn-info form-control" type="submit" value="Create" />
        </div>
        <div class="col-6">
            <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
        </div>

    </div>
</form>